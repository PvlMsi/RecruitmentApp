<% if @user.errors.any? %>
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h2 align="center" class="panel-title"><%= pluralize(@user.errors.count, "błąd" ) %> uniemożliwił stworzenie zgłoszenia</h2>
            <div class="panel-body">
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>

<div class="row">
  <div class="col-xd-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form:"}) do |form| %>
        <div class="form-group">
          <div class="col-sm-4 control-label">
            <%= form.label "Imie:" %>
          </div>
          <div class="col-sm-4">
            <%= form.text_field :firstName, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4 control-label">
            <%= form.label "Nazwisko:" %>
          </div>
          <div class="col-sm-4">
            <%= form.text_field :lastName, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4 control-label">
            <%= form.label "Numer telefonu:" %>
          </div>
          <div class="col-sm-4">
            <%= form.text_field :phoneNumber, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4 control-label">
            <%= form.label "E-Mail:" %>
          </div>
          <div class="col-sm-4">
            <%= form.email_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4 control-label">
            <%= form.label "Hasło:" %>
          </div>
          <div class="col-sm-4">
            <%= form.password_field :password, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4 control-label">
            <%= form.label "Powtórz hasło:" %>
          </div>
          <div class="col-sm-4">
            <%= form.password_field :password_confirmation, class: "form-control"%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-5">
            <%= form.submit(@user.new_record? ? "Zarejestruj się" : "Edytuj", class:"btn btn-primary btn-lg active")%>
            <%= link_to "Powrót", root_path, class:"btn btn-default btn-lg active", role:"button" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
