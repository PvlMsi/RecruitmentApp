<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-xd-12">
        <%= form_for(@application, :html => {class: "form-horizontal", role: "form:"}) do |form| %>
            <div class="form-group">
              <div class="col-sm-4 control-label">
                Zaaplikował/a o:
              </div>
              <div class="col-sm-4">
                <%= @application.jobType %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-4 control-label">
                Dział:
              </div>
              <div class="col-sm-4">
                <%= @application.division %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-4 control-label">
                Znane technologie:
              </div>
              <div class="col-sm-4">
                <%= @application.technologies %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-3">
                <%= link_to 'W trakcie rozpatrywania', application_path, method: :put, class:"btn btn-info" %>
                <%= link_to 'Rozpatrzono pozytywnie', applications_path , class:"btn btn-success" %>
                <%= link_to 'Rozpatrzono negatywnie', applications_path, class:"btn btn-warning" %>
                <%= link_to "Powrót", applications_path, class:"btn btn-default"%>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>