<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-xd-12">
        <%= form_for(@application, :html => {class: "form-horizontal", role: "form:"}) do |form| %>
            <div class="form-group">
              <div class="col-sm-4 control-label">
                Zaaplikował/a o:
              </div>
              <div class="col-sm-4">
                <%= @application.jobType %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-4 control-label">
                Dział:
              </div>
              <div class="col-sm-4">
                <%= @application.division %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-4 control-label">
                Znane technologie:
              </div>
              <div class="col-sm-4">
                <%= @application.technologies %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-4 control-label">
                CV:
              </div>
              <div class="col-sm-4">
                <%= link_to "Plik CV", @application.cv.url, class:"btn btn-default"%>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-4 control-label">
                Certyfikaty:
              </div>
              <div class="col-sm-4">
                <% if @application.certificates %><%= link_to "Certyfikaty", @application.certificates.url, class:"btn btn-default"%><% end %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12 text-center">
                <%= link_to "Powrót", applications_path, class:"btn btn-default"%>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>