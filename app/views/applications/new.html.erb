<div class="jumbotron">
  <div class="container">
    <% if logged_in? %>
        <h2 align="center">Stwórz zgłoszenie</h2>
        <%= render 'form' %>
    <% else %>
        <h1 align="center">Wymagane zalogowanie</h1>
        <p align="center"><%= link_to 'Zaloguj', login_path, class: "btn btn-primary btn-lg", role: "button" %></p>
    <% end %>
  </div>
</div>