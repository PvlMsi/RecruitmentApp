<h1 align="center">Logowanie</h1>

<div class="row">
  <div class="col-xd-12">
    <%= form_for(:session, url: login_path, :html => {class: "form-horizontal", role: "form:"}) do |form| %>
        <div class="form-group">
          <div class="col-sm-4 control-label">
            <%= form.label "E-Mail:" %>
          </div>
          <div class="col-sm-4">
            <%= form.email_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4 control-label">
            <%= form.label "Hasło:" %>
          </div>
          <div class="col-sm-4">
            <%= form.password_field :password, autocomplete: "off", class: "form-control"  %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-5 col-sm-6">
            <%= form.submit "Zaloguj", class:"btn btn-primary btn-lg active"%>
            <%= link_to "Powrót", root_path, class:"btn btn-default btn-lg active", role:"button" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
